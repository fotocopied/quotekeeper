<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:paddingTop="30dp" >

        <TextView
            android:id="@+id/randomQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random Quote"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:textColor="#6A3384"/>

        <EditText
            android:id="@+id/randomQuoteValue"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quote"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/randomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="By:"
            android:textColor="#6A3384" />

        <EditText
            android:id="@+id/randomNameValue"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" >
         <requestFocus />
        </EditText>

        <Button
            android:id="@+id/addButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="addRandom"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:text="Add" 
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonstate"/>

    </LinearLayout>


</ScrollView>